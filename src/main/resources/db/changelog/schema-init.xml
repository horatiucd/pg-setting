<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="horatiucd" id="100">
        <createTable tableName="currency">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="horatiucd" id="200">
        <addPrimaryKey columnNames="id" constraintName="currency_pk" tableName="currency"/>
    </changeSet>

    <changeSet author="horatiucd" id="300">
        <createTable tableName="product">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="currency_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="horatiucd" id="400">
        <addPrimaryKey columnNames="id" constraintName="product_pk" tableName="product"/>
        <addForeignKeyConstraint baseTableName="product" baseColumnNames="currency_id" constraintName="product_currency_fk"
                                 referencedTableName="currency" referencedColumnNames="id"/>
    </changeSet>

    <changeSet author="horatiucd" id="500">
        <createTable tableName="currency_conversion">
            <column name="id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="from_currency_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="to_currency_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="double">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="horatiucd" id="600">
        <addPrimaryKey columnNames="id" constraintName="currency_conversion_pk" tableName="currency_conversion"/>
        <addForeignKeyConstraint baseTableName="currency_conversion" baseColumnNames="from_currency_id" constraintName="from_currency_conversion_currency_fk"
                                 referencedTableName="currency" referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="currency_conversion" baseColumnNames="to_currency_id" constraintName="to_currency_conversion_currency_fk"
                                 referencedTableName="currency" referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
